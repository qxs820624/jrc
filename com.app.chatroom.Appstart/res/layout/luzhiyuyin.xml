<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/bigbnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/bigbnt1"
        android:contentDescription="渐变" />
    
    <RelativeLayout 
        android:id="@+id/newrl"
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bigbnt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
                <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/beginluyintv"
            android:layout_centerVertical="true" />
        <TextView
        android:id="@+id/timelong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#643714"
        android:textSize="24dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/time2"
         />


        
        </RelativeLayout>

    <LinearLayout
        android:id="@+id/dazuill"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newrl"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal"
         >

        <TextView
            android:id="@+id/begintm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
             android:textColor="#482c3f"
            android:text="00:00" />

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:minHeight="5dp"
            android:maxHeight="5dp"
            android:thumbOffset="0dp"
            android:progressDrawable="@drawable/seekbar_img"
            android:thumb="@drawable/seekbar_thumb" />

        <TextView
            android:id="@+id/endtm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
             android:textColor="#482c3f"
            android:text="04:33" />
    </LinearLayout>

    <Button
        android:id="@+id/bfmbnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dazuill"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/mybofang1"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/scandcl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bfmbnt"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:visibility="gone"
       >

        <Button
            android:id="@+id/dazuiscbnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/scbnt1"
            />

        <Button
            android:id="@+id/dazuiclbnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/chonglu1"
             />
    </LinearLayout>

    <ImageButton
        android:id="@+id/zantingorbofang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

</RelativeLayout>