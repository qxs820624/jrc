<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <RelativeLayout
        android:id="@+id/gr_paihangbang_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gameroom_top"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/gr_paihangbang_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/gameroom_back1"
             >
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/gameroom_logo" >
        </TextView>
    </RelativeLayout>
        <RelativeLayout
        android:id="@+id/gr_paihangbang_bottom"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/gr_paihangbang_top"
        android:background="@drawable/gameroom_bottom"
        android:orientation="vertical"
        >      
          <ListView
        android:id="@+id/gr_paihangbang_lv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fastScrollEnabled="false"
        android:cacheColorHint="#00000000"
        android:layout_above="@+id/game_paihangbang_begin"
         android:layout_marginBottom="3dp"
          android:divider="@drawable/liebiaosort"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" >
    </ListView>
                   <Button
                android:id="@+id/game_paihangbang_begin"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gamebegin1"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                /> 
    </RelativeLayout>
        <LinearLayout
        android:id="@+id/game_paihangbang_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/loading_bg"
        android:gravity="center"
         >

        <ProgressBar
            style="@android:style/Widget.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/custom_progress_draw" />
                   <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/mysavepb"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/loading_text" />
    </LinearLayout>
</RelativeLayout>
