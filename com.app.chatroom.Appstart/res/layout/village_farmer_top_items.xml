<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/village_item_top_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <RelativeLayout
        android:id="@+id/village_top_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp" 
        >

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/village_system_textView" >

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" >

                <com.app.chatroom.view.NetImageView
                    android:id="@+id/village_logo"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/photo" />

                <ImageButton
                    android:id="@+id/info_photo_bg_ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/village_logo_bg" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/relativeLayout2"
            android:src="@drawable/village_name_text" />

        <TextView
            android:id="@+id/village_top_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_marginBottom="-3dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imageView1"
            android:singleLine="true"
            android:textColor="#cf5d18"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="16dp"
            android:src="@drawable/village_score_text" />

        <com.duom.fjz.iteminfo.MarqueeTextView
            android:id="@+id/village_score_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignLeft="@+id/village_top_name_textView"
            android:layout_marginBottom="-3dp"
            marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="#cf5d18"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="16dp"
            android:src="@drawable/village_total_text" />

        <TextView
            android:id="@+id/village_totalpeople_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/village_score_textView"
            android:layout_alignTop="@+id/imageView3"
            android:layout_marginTop="-3dp"
            android:singleLine="true"
            android:textColor="#cf5d18"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/village_system_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:autoLink="web|email"
            android:clickable="true"
            android:focusable="true"
                android:background="@drawable/listheaderbg1"
            android:gravity="left|center"
            android:lineSpacingExtra="2dp"
            android:lines="3"
            android:textColor="#ffddb2"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>