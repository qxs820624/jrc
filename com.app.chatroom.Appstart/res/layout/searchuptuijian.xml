<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/chatroom_userinfo_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/sf_tuijianll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sf_tuijian_tv"
            android:layout_width="220dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/makesure_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#521502"
            android:textSize="15dp" />
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/sf_tuijian_ll2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/sf_tuijianll"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" >
        </LinearLayout>

        <ImageButton
            android:id="@+id/sf_tuijian_jian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sf_jianhao1"
            android:textColor="#521502"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/sf_tuijian_et"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sf_shuru"
            android:ellipsize="end"
            android:ems="10"
            android:onClick="false"
            android:focusable="true"
            android:gravity="center"
            android:lines="1"
            android:singleLine="true"
            android:text="10"
            android:textColor="#833a16"
            android:textColorHint="#c5934c"
            android:textSize="15dp" >

            <requestFocus />
        </TextView>

        <ImageButton
            android:id="@+id/sf_tuijian_jia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sf_jiahao1"
            android:textColor="#521502"
            android:textSize="15dp" />
    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/sf_tuijian_ll3"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/sf_tuijian_ll2"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"       
            android:text="最低出价不得低于 "
            android:textColor="#521502"
            android:textSize="15dp" />
                <TextView
            android:id="@+id/sf_tuijian_numjinbi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"       
            android:textColor="#521502"
            android:textSize="20dp" />
                                <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"       
            android:text=" 金币"
            android:textColor="#521502"
            android:textSize="15dp" />
    </LinearLayout>
    
        <RelativeLayout 
             android:id="@+id/sf_tuijian_rlbnt"
        android:layout_width="wrap_content"
         android:layout_below="@+id/sf_tuijian_ll3"
         android:gravity="center_horizontal"
         android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" >           

    <ImageButton
        android:id="@+id/sf_tuijian_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_marginTop="20dp"
        android:background="@drawable/sf_chujia1" />
    
        <ImageButton
        android:id="@+id/sf_tuijian_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sf_tuijian_sure"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/uptuijian_cancle" />
        
        </RelativeLayout>
    
        <LinearLayout
        android:id="@+id/uptuijianll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/loading_bg"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical" >

        <ProgressBar
            style="@android:style/Widget.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/custom_progress_draw" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mysavepb"
            android:layout_marginTop="10dp"
            android:src="@drawable/loading_text" />
    </LinearLayout>

</RelativeLayout>