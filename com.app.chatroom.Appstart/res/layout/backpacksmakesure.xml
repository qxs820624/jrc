<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/chatroom_userinfo_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/makesure_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/makesure_et"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/makesure_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/makesure_bk"
            android:textColor="#521502"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/makesure_ll"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/makesure_et"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true" >
            </LinearLayout>

            <TextView
                android:id="@+id/makesure_diuqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丢弃 "
                android:textColor="#521502"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/makesure_num"
                android:layout_width="55.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/input_text2"
                android:ellipsize="end"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:singleLine="true"
                android:text="1"
                android:textColor="#833a16"
                android:textColorHint="#c5934c"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/makesure_ll"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/makesure_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/sure1" />

            <ImageButton
                android:id="@+id/makesure_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@drawable/cancle1" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>