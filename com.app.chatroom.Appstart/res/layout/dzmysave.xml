<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainweixin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dazui_save_hengtiao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dazui_save_dztop"
        android:orientation="horizontal"
                        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/dazuitop" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/dazui_save_hengtiao"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/dazuidibu" >

     <ListView 
    android:id="@+id/dazui_save_lv"
    android:cacheColorHint="#00000000"
    android:scrollbarThumbVertical="@drawable/gun"
    android:listSelector="@color/transparent"
    android:layout_width="fill_parent"
     style="@style/webview_style"
    android:layout_height="fill_parent"
    android:divider="@drawable/tm"
  ></ListView>        
    </LinearLayout>
        <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dazui_save_hengtiao"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/shangdz" >
    </ImageButton>
    
        <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_alignBottom="@id/linearlv"
        android:background="@drawable/xiadz" >
    </ImageButton>
    

    <RelativeLayout
        android:id="@+id/dazui_save_dztop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/dazui_save_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/mainback1"
            >
        </Button>
      

        <TextView
            android:id="@+id/dslogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dazuilogo" >
        </TextView>
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/dazui_save_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/loading_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/dazui_save_pb"
            style="@android:style/Widget.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/custom_progress_draw" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/loading_text" />
    </LinearLayout>
        <ImageView
        android:id="@+id/dznofabiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>