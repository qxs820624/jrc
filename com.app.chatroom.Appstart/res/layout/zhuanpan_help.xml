<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >


    <RelativeLayout
        android:id="@+id/zp_help_rl"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zp_help_top"
        android:layout_marginTop="-20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/zhuanpan_dibu" >

        <WebView
            android:id="@+id/help_wv"
            style="@style/webview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarThumbVertical="@drawable/gun"
            android:scrollbars="vertical" />
    </RelativeLayout>
    
        <ImageView
        android:id="@+id/zp_help_top"
        android:layout_width="278dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/zhuanpan_introduction_top" />

    <ImageButton
        android:id="@+id/help_close"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/zp_help_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/help_close1" />

</RelativeLayout>