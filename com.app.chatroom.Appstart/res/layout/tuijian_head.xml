<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tuijian_xian" >

        <FrameLayout
            android:id="@+id/tuijian_fl1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tuijian_iv1"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/tuijian_kuang1"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tuijian_guanjun"
                android:scaleType="centerCrop" />
                                                                <ImageView
                                android:id="@+id/tuijian_sex_num1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                 android:layout_gravity="bottom|right"
                                 android:layout_marginRight="65dp"
                                 android:layout_marginBottom="35dp"
                                 />
        </FrameLayout>

       <com.duom.fjz.iteminfo.MarqueeTextView
             marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:singleLine="true"
            android:id="@+id/tv_num1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tuijian_fl1"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
                                android:textColor="#774220"
                    android:textSize="16dp"
            android:text="快乐" />

        <RelativeLayout
            android:id="@+id/tuijian_yaji"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_num1"
            android:gravity="center_horizontal" >

            <RelativeLayout
                android:id="@+id/tuijian_rlya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <FrameLayout
                    android:id="@+id/tuijian_fl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/tuijian_iv2"
                        android:layout_width="91dp"
                        android:layout_height="91dp"
                        android:layout_gravity="center" />

                    <ImageView
                        android:id="@+id/tuijian_kuang2"
                        android:layout_width="130dp"
                        android:layout_height="92dp"
                        android:background="@drawable/tuijian_yajun"
                        android:scaleType="centerCrop" />
                                                     <ImageView
                                android:id="@+id/tuijian_sex_num2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                 android:layout_gravity="bottom|right"
                                 android:layout_marginRight="30dp"
                                 android:layout_marginBottom="7dp"
                                />
                </FrameLayout>

                 <com.duom.fjz.iteminfo.MarqueeTextView
                      marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                    android:id="@+id/tv_num2"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                      android:layout_below="@+id/tuijian_fl2"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                                        android:textColor="#774220"
                    android:textSize="16dp"
                    android:text="快乐" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tuijian_rlji"
                android:layout_width="wrap_content"
                 android:layout_toRightOf="@+id/tuijian_rlya"
                android:layout_height="wrap_content" >

                <FrameLayout
                    android:id="@+id/tuijian_fl3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/tuijian_iv3"
                        android:layout_width="91dp"
                        android:layout_height="91dp"
                        android:layout_gravity="center" />

                    <ImageView
                        android:id="@+id/tuijian_kuang3"
                        android:layout_width="130dp"
                        android:layout_height="92dp"
                        android:background="@drawable/tuijian_jijun"
                        android:scaleType="centerCrop" />
                                                                         <ImageView
                                android:id="@+id/tuijian_sex_num3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                 android:layout_gravity="bottom|right"
                                 android:layout_marginRight="30dp"
                                 android:layout_marginBottom="7dp"
                              />
                </FrameLayout>
                                <com.duom.fjz.iteminfo.MarqueeTextView
                                     marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                    android:id="@+id/tv_num3"
                    android:textColor="#774220"
                    android:textSize="16dp"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tuijian_fl3"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:text="快乐" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>