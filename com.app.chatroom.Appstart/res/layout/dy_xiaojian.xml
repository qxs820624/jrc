<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dy_relayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/dy_relativell"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/dy_pinglun_header_rl"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_alignTop="@+id/dy_ll1"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp" >

            <ImageView
                android:id="@+id/dy_header"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_centerVertical="true"
                android:focusable="false" />

            <ImageView
                android:id="@+id/dy_pinglunheaderw"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:src="@drawable/w" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dy_ll1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/dy_pinglun_header_rl"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/dy_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/man"
                android:focusable="false" />

            <com.duom.fjz.iteminfo.MarqueeTextView
                android:id="@+id/dy_username"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:textColor="#827a80"
                android:textSize="14dp" />

            <Button
                android:id="@+id/dy_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dy_share"
                android:focusable="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dy_biaotill"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dy_ll1"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/dy_pinglun_header_rl"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dy_biaoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:textColor="#482c3f"
                android:textSize="17dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/dy_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dy_biaotill"
            android:layout_below="@+id/dy_biaotill"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:lineSpacingExtra="3dp"
            android:text="dsafefwf"
            android:textColor="#482c3f"
            android:textSize="17dp" />

        <LinearLayout
            android:id="@+id/dy_bigphoto_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dy_content_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >
        </LinearLayout>

        <ImageView
            android:id="@+id/dy_content_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dy_biaotill"
            android:layout_below="@+id/dy_bigphoto_ll"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:src="@drawable/defaultpic"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/dy_photo_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dy_biaotill"
            android:layout_below="@+id/dy_content_iv"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/dy_rl1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/photoview_k1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/dy_photo1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="false"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defautheader" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dy_rl2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/photoview_k1"
                android:clickable="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/dy_photo2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="false"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dy_rl3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/photoview_k1"
                android:clickable="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/dy_photo3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="false"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dy_rl4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/photoview_k1"
                android:clickable="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/dy_photo4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="false"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dy_rl5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/photoview_k1"
                android:clickable="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/dy_photo5"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="false"
                    android:scaleType="centerCrop" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/dy_bf_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dy_biaotill"
            android:layout_below="@+id/dy_photo_ll"
            android:layout_marginTop="5dp"
            android:descendantFocusability="blocksDescendants" >

            <RelativeLayout
                 android:id="@+id/dy_bofang_left_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                >

                <ImageButton
                    android:id="@+id/dy_bofang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/dy_bofang1"
                    android:focusable="false" />

                <ProgressBar
                    android:id="@+id/dy_down_pb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      style="@android:style/Widget.ProgressBar"
                    android:layout_alignTop="@+id/dy_bofang"
                    android:layout_alignRight="@+id/dy_bofang"
                    android:layout_alignLeft="@+id/dy_bofang"
                    android:layout_alignBottom="@+id/dy_bofang"
                    android:visibility="gone"
                    android:indeterminateDrawable="@drawable/dy_progress_draw"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dy_pannal_rl"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/dy_bofang_left_rl"
                android:background="@drawable/dy_pannal_bg" >

                <SeekBar
                    android:id="@+id/dy_seekbar"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:focusable="false"
                    android:maxHeight="5dp"
                    android:minHeight="5dp"
                    android:progressDrawable="@drawable/seekbar_img_dy"
                    android:thumb="@drawable/dy_jindu_yuandian"
                    android:thumbOffset="0dp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dy_long_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dy_biaotill"
            android:layout_below="@+id/dy_bf_rl"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时长：" />

            <TextView
                android:id="@+id/dy_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="‘" />
        </LinearLayout>

        <TextView
            android:id="@+id/dy_numdis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/dy_bf_rl"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:text="25条评论" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dy_bf_rl"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/dy_numdis"
            android:background="@drawable/dy_pinglun" />

        <TextView
            android:id="@+id/dy_uptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dy_biaotill"
            android:layout_below="@+id/dy_bf_rl"
            android:layout_marginTop="5dp"
            android:text="1小时前" />
    </RelativeLayout>

</RelativeLayout>