<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@drawable/item_list_orange"
    android:orientation="vertical" >


        <RelativeLayout        
            android:id="@+id/RelativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8.0dip" >

            <ImageView
                android:id="@+id/village_dialog_item_header_image"
                android:layout_width="36.0dp"
                android:layout_height="36.0dp"
                android:src="@drawable/photo" />

            <ImageView
                android:id="@+id/village_dialog_item_facemask"
                android:layout_width="36.0dp"
                android:layout_height="36.0dp"
                android:background="@drawable/chat_head_border_orange"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:src="@drawable/avatar_bg_orange_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llMsgText"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
             android:gravity="center_vertical"
            android:layout_marginLeft="4.0dip"
            android:layout_toRightOf="@id/RelativeLayout1" >

            <ImageView
                android:id="@+id/village_dialog_item_sex_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="3dp"
                android:src="@drawable/man" />

            <com.duom.fjz.iteminfo.MarqueeTextView
                android:id="@+id/village_dialog_item_name_textView"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_toRightOf="@+id/village_dialog_item_sex_image"
                marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="酷酷熊"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@+id/village_dialog_item_name_textView"
                android:layout_below="@+id/village_dialog_item_name_textView"
                android:text="ID："
                android:textColor="#ff833a16"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/village_dialog_item_uid_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:text="6879"
                android:textColor="#833a16"
                android:textSize="14dp" />
            
        </RelativeLayout>
        
           <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:gravity="right"
                android:orientation="vertical"
           >
                                   <ImageView 
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/time" 
                    android:layout_marginTop="5dp"
                    android:layout_alignLeft="@+id/village_userinfo_dialog_edit_btn"
                        />
            <TextView 
                 android:id="@+id/village_userinfo_dialog_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6分钟前"
                android:textColor="#833a16"
                android:layout_toRightOf="@+id/time"
                android:textSize="14dp"
                />
            <ImageView
                android:id="@+id/village_userinfo_dialog_edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/village_userinfo_dialog_time"
                android:layout_alignParentRight="true"
                android:background="@drawable/chatroom_userinfo_dialog_xiaoguanzhu_btn"
                android:focusable="false" />
            </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dialog_line" />

</RelativeLayout>