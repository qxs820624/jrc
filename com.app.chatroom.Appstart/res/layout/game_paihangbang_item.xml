<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/game_paihangbang_bigrl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/game_paihangbang__header_rl"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp" >

            <ImageView
                android:id="@+id/game_paihangbang_header"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_centerVertical="true"
                android:focusable="false" />

            <ImageView
                android:id="@+id/game_paihangbang_headerw"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_centerVertical="true"
                android:focusable="false"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/game_paihangbang_ll1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/game_paihangbang__header_rl"
            android:orientation="horizontal" >

            <com.duom.fjz.iteminfo.MarqueeTextView
                android:id="@+id/game_paihangbang_usertitle"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:textColor="#213642"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/game_paihangbang_userdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="30秒前"
                android:textColor="#213642"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_paihangbang_dz_pinglun_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_paihangbang_ll1"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/game_paihangbang__header_rl"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/game_paihangbang_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:lineSpacingExtra="3dp"
                android:text="地方都纷纷否认大凤凤地方"
                android:textColor="#777777"
                android:textSize="17dp" />
            
                        <TextView
                android:id="@+id/game_paihangbang_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:lineSpacingExtra="3dp"
                android:text="12次"
                android:textColor="#777777"
                android:visibility="gone"
                android:layout_marginRight="3dp"
                android:textSize="17dp" />

        </LinearLayout>
    </RelativeLayout>
    
</RelativeLayout>