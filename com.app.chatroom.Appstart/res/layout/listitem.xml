<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="fill_parent"
    android:layout_height="75dp" >

    <LinearLayout
        android:id="@+id/listitem"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/mysc_deletepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/delete1"
            android:focusable="false"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/itemll"
            android:layout_width="200dip"
            android:layout_height="55dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:maxLines="2"
                android:text="你真的大凤的饿"
                android:textColor="#281322"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="71.33333dp"
            android:layout_height="47.33333dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/suoluekuang"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="71dp"
                android:layout_height="47dp"
                android:scaleType="centerCrop"
                android:src="@drawable/quesunpic" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/shenhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/passed"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="19dp"
        android:layout_below="@+id/listitem"
        android:layout_marginLeft="10dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="5dp"
            android:text="2013-01-27 18:35"
            android:textColor="#827a80"
            android:textSize="14dp" />
    </LinearLayout>

</RelativeLayout>