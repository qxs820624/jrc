<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/village_dialog_bg" >

        <ScrollView
            android:id="@+id/userinfo_chooseid_scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.03"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/onerl"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:padding="0.0dip" >

                <LinearLayout
                    android:id="@+id/linearLayout1212"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/choose_one_title" />

                        <EditText
                            android:id="@+id/userinfo_choosephone_EditText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/imageView1"
                            android:layout_below="@+id/imageView1"
                            android:layout_marginLeft="-40dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/input_text2"
                            android:ems="10"
                            android:hint="请输入手机号码"
                            android:inputType="phone"
                            android:singleLine="true"
                            android:textColor="#561f1d"
                            android:textColorHint="#a08957"
                            android:textSize="14dp" >
                        </EditText>

                        <EditText
                            android:id="@+id/userinfo_chooseemail_EditText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/imageView1"
                            android:layout_below="@+id/userinfo_choosephone_EditText"
                            android:layout_marginLeft="-40dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/input_text2"
                            android:ems="10"
                            android:hint="请输入Email地址"
                            android:inputType="textEmailAddress"
                            android:singleLine="true"
                            android:textColor="#561f1d"
                            android:textColorHint="#a08957"
                            android:textSize="14dp" >
                        </EditText>

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/userinfo_chooseemail_EditText"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/choose_message" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/imageView1"
                            android:layout_below="@+id/imageView2"
                            android:layout_marginTop="22dp"
                            android:src="@drawable/choose_two_title" />

                        <EditText
                            android:id="@+id/userinfo_input_code_EditText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/input_text2"
                            android:ems="10"
                            android:hint="请输入获取到的验证码"
                            android:singleLine="true"
                            android:textColor="#561f1d"
                            android:textColorHint="#a08957"
                            android:textSize="14dp" >
                        </EditText>

                        <ImageButton
