                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/imageView2"
                            android:layout_toRightOf="@+id/userinfo_user_login_Button"
                            android:background="@drawable/userinfo_code_bg" />

                    </RelativeLayout>

